<h1>Formulario para buscar modelos</h1>

<%= form_for(@modelo, url: resultados_modelos_path, method: :post, remote: true) do |f| %>
  <div class="field">
    <%= label :buscar, :nombre %><br />
    <%= text_field :buscar, :nombre %>
  </div>
  <div class="actions">
    <%= f.submit "Buscar" %>
  </div>
<% end %>

<div id="lista">
<%= render 'lista' %>
</div>